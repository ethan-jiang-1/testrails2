<h3>About customer</h3>
<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @customer.name %></dd>

  <dt>Phone:</dt>
  <dd><%= @customer.phone %></dd>

  <dt>Company:</dt>
  <dd><%= @customer.company_id %></dd>

  <dt>Role(s):</dt>
  <dd><%= @customer.role_ids %></dd>
</dl>


<%= link_to 'Edit', edit_customer_path(@customer), :class=>"btn" %>
<%= link_to 'Back', customers_path, :class=>"btn" %>

<h3>Listing customers</h3>

<table class="table table-hover">
  <tr class="container-fluid">
    <th>Name</th>
    <th>Phone</th>
    <th>Phone Mobile</th>
    <th>Mailing Address</th>
    <th>Email Address</th>
    <th>Socal Info</th>
    <th>Company</th>
    <th>Picture</th>
    <th>Role(s)</th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr class="container-fluid">
    <td><%= customer.name %></td>
    <td><%= customer.phone %></td>
    <td><%= customer.phone_mobile %></td>
    <td><%= customer.mailing_address %></td>
    <td><%= customer.email_address %></td>
    <td><%= customer.social_info %></td>
    <td><%= customer.company_id %></td>
    <td><%= customer.picture_id %></td>
    <td><%= customer.role_ids %></td>
    <td>
      <%= link_to 'Show', customer, :class => "btn" %>
      <%= link_to 'Edit', edit_customer_path(customer), :class => "btn" %>
      <%= link_to 'Destroy', customer, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn" %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New Customer', new_customer_path, :class => 'btn btn-inverse' %>

<%= simple_form_for(@product,:html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :price %>
    <%= f.association :pictures  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= simple_form_for(@post, :remote => true, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title , :input_html => { :class => 'input-xxlarge' } %>
    <%= f.input :content, :input_html => {:rows => '10', :class => 'input-xxlarge' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<div id="ajax-response" class="alert alert-success">
</div>

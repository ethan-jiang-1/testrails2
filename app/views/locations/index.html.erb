<h3> Listing Locations </h3>

<%=  form_tag(locations_path, :method =>:get) do %>
    <div class="nav pull-right">
      <button type="submit" class="btn"><i class="icon-search"></i> Filter location(s) nearby (100km)</button>
      <%= text_field_tag :search, params[:search], :class=>"input-medium search-query", :placeholder=>"an address..." %>
    </div>
<% end %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.address %></td>
      <td><%= location.latitude %></td>
      <td><%= location.longitude %></td>
      <td><%= link_to "Show", location, :class=>"btn-link" %> <%= link_to "Edit", edit_location_path(location), :class=>"btn-link" %> <%= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete, :class=>"btn-link" %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Location", new_location_path, :class => "btn btn-inverse" %></p>

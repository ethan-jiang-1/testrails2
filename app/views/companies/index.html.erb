<h3>Listing companies</h3>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Picture</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.location_id %> - <%= Location.find_by_id(company.location_id).address %></td>
    <td><%= company.picture_id %>  - <%= image_tag url_for(:action => 'blob_picture', :controller => 'pictures', :id => company.picture_id) %> </td>
    <td><%= link_to 'Show', company %>
        <%= link_to 'Edit', edit_company_path(company) %>
        <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Company', new_company_path, :class => 'btn btn-inverse' %>

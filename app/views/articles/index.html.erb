<h1>Listing articles</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Tag</th>
    <th>Actions</th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.content %></td>
    <td><%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')%></td>
    <td><%= link_to 'Show', article %> &nbsp;
        <%= link_to 'Edit', edit_article_path(article) %> &nbsp;
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_article_path %>


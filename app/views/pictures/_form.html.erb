<%= simple_form_for(@picture, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <!-- %= f.input :uuid, :readonly => true, :class => 'input-xxlarge' % -->
      <div class="control-group float optional">
        <%= f.label :uuid %>
         <div class="controls">
          <%= f.input_field :uuid, :readonly => true, :class => 'input-xxlarge' %>
          </div>
      </div>
      <%= f.input :imageable_id %>
      <%= f.input :imageable_type %>
      <%= f.input :content_type %>
      <%= f.input :store_loc %>
      <%= f.input :store_uri %>
      <p><%= image_tag url_for(:action => 'blob_picture', :id => @picture.id)  %> <%= f.file_field  :local_data, :value => "Select a file"%></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

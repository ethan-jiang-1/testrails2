<%= simple_form_for(@picture, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :imageable_id %>
      <%= f.input :imageable_type %>
      <%= f.input :external_url %>
      <%= f.input :asset_path %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
